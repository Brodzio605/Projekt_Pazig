<Window
    x:Class="BadanieKrwi.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BadanieKrwi"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:BadanieKrwi.ViewModels"
    x:Name="mainWindow"
    Title="MainWindow"
    Width="600"
    Height="600"
    Background="Black"
    FontSize="15"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <StackPanel Margin="50">
        <Label
            HorizontalAlignment="Center"
            Content="Login"
            FontSize="50"
            FontWeight="Bold"
            Foreground="White" />
        <Separator FontWeight="Bold" Foreground="White" />
        <Label
            Margin="0,20,0,0"
            Content="Email"
            FontSize="25"
            Foreground="White" />
        <TextBox
            Margin="5,0,5,0"
            Background="LightSkyBlue"
            FontSize="25"
            Foreground="Black"
            Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />

        <Label
            Margin="0,40,0,0"
            Content="Hasło"
            FontSize="25"
            Foreground="White" />
        <PasswordBox
            Margin="5,0,5,0"
            Background="LightSkyBlue"
            FontSize="25"
            Foreground="Black"
            PasswordChanged="inputHaslo_PasswordChanged" />

        <Label
            Margin="0,30,0,0"
            FontSize="15"
            Foreground="White">
            <TextBlock>
                <Run Text="Nie masz jeszcze konta?" />
                <Hyperlink Command="{Binding RejestracjaWidokCommand}" CommandParameter="{Binding ElementName=mainWindow}">Zarejestruj się</Hyperlink>
            </TextBlock>
        </Label>

        <Button
            Margin="0,30,0,0"
            Padding="10"
            HorizontalAlignment="Center"
            Background="LightSkyBlue"
            Command="{Binding LogowanieWidokCommand}"
            CommandParameter="{Binding ElementName=mainWindow}"
            Content="Zaloguj się"
            FontSize="25" />
    </StackPanel>
</Window>
