<Window
    x:Class="BadanieKrwi.Views.BadaniaEdycjaOkno"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BadanieKrwi"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="BadaniaEdycja"
    Width="800"
    Height="1500"
    Background="Black"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.4*" />
                <RowDefinition Height="0.2*" />
                <RowDefinition Height="0.2*" />
                <RowDefinition Height="0.4*" />
                <RowDefinition Height="0.2*" />
                <RowDefinition Height="0.2*" />
                <RowDefinition Height="0.2*" />
                <RowDefinition Height="0.2*" />
                <RowDefinition Height="0.2*" />
                <RowDefinition Height="0.2*" />
                <RowDefinition Height="0.2*" />
                <RowDefinition Height="0.2*" />
                <RowDefinition Height="0.2*" />
                <RowDefinition Height="0.2*" />
                <RowDefinition Height="0.2*" />
                <RowDefinition Height="0.2*" />
                <RowDefinition Height="0.2*" />
                <RowDefinition Height="0.2*" />
                <RowDefinition Height="0.2*" />
                <RowDefinition Height="0.2*" />
                <RowDefinition Height="0.3*" />
                <RowDefinition Height="0.3*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4.5*" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Label
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                Content="Stwórz nowe badanie"
                FontSize="50"
                FontWeight="Bold"
                Foreground="White" />

            <Label
                Grid.Row="1"
                Grid.Column="0"
                Margin="20,10,0,10"
                VerticalAlignment="Center"
                Content="Data badania"
                FontSize="25"
                Foreground="White" />

            <Label
                Grid.Row="2"
                Grid.Column="0"
                Margin="20,10,0,10"
                VerticalAlignment="Center"
                Content="Nazwa Kliniki"
                FontSize="25"
                Foreground="White" />

            <Label
                Grid.Row="3"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Morfologia Krwi"
                FontSize="40"
                FontWeight="Bold"
                Foreground="White" />

            <Label
                Grid.Row="4"
                Grid.Column="0"
                Margin="20,10,0,10"
                VerticalAlignment="Center"
                Content="Stężenie Erytrocytów RBC [liczba/μl]"
                FontSize="25"
                Foreground="White" />

            <Label
                Grid.Row="5"
                Grid.Column="0"
                Margin="20,10,0,10"
                VerticalAlignment="Center"
                Content="Hemoglobina Hb [g/dl]"
                FontSize="25"
                Foreground="White" />

            <Label
                Grid.Row="6"
                Grid.Column="0"
                Margin="20,10,0,10"
                VerticalAlignment="Center"
                Content="Hematokryt Htc [%]"
                FontSize="25"
                Foreground="White" />

            <Label
                Grid.Row="7"
                Grid.Column="0"
                Margin="20,10,0,10"
                VerticalAlignment="Center"
                Content="Średnia objętość erytrocytu MCV [fl]"
                FontSize="25"
                Foreground="White" />

            <Label
                Grid.Row="8"
                Grid.Column="0"
                Margin="20,10,0,10"
                VerticalAlignment="Center"
                Content="Średnia masa hemoglobiny w erytrocycie MCH [pg]"
                FontSize="25"
                Foreground="White" />

            <Label
                Grid.Row="9"
                Grid.Column="0"
                Margin="20,10,0,10"
                VerticalAlignment="Center"
                Content="Średnie stężenie hemoglobiny w erytrocytach MCHC [g/dl]"
                FontSize="25"
                Foreground="White" />

            <Label
                Grid.Row="10"
                Grid.Column="0"
                Margin="20,10,0,10"
                VerticalAlignment="Center"
                Content="Rozpiętość rozkładu objętości erytrocytów RDW-CV [%]"
                FontSize="25"
                Foreground="White" />

            <Label
                Grid.Row="11"
                Grid.Column="0"
                Margin="20,10,0,10"
                VerticalAlignment="Center"
                Content="Retikulocyty RC [%]"
                FontSize="25"
                Foreground="White" />

            <Label
                Grid.Row="12"
                Grid.Column="0"
                Margin="20,10,0,10"
                VerticalAlignment="Center"
                Content="Stężenie leukocytów WBC [liczba/μl]"
                FontSize="25"
                Foreground="White" />

            <Label
                Grid.Row="13"
                Grid.Column="0"
                Margin="20,10,0,10"
                VerticalAlignment="Center"
                Content="Neutrofile [liczba/μl]"
                FontSize="25"
                Foreground="White" />

            <Label
                Grid.Row="14"
                Grid.Column="0"
                Margin="20,10,0,10"
                VerticalAlignment="Center"
                Content="Bazofile [liczba/μl]"
                FontSize="25"
                Foreground="White" />

            <Label
                Grid.Row="15"
                Grid.Column="0"
                Margin="20,10,0,10"
                VerticalAlignment="Center"
                Content="Eozynofile [liczba/μl]"
                FontSize="25"
                Foreground="White" />

            <Label
                Grid.Row="16"
                Grid.Column="0"
                Margin="20,10,0,10"
                VerticalAlignment="Center"
                Content="Limfocyty [liczba/μl]"
                FontSize="25"
                Foreground="White" />

            <Label
                Grid.Row="17"
                Grid.Column="0"
                Margin="20,10,0,10"
                VerticalAlignment="Center"
                Content="Monocyty [liczba/μl]"
                FontSize="25"
                Foreground="White" />

            <Label
                Grid.Row="18"
                Grid.Column="0"
                Margin="20,10,0,10"
                VerticalAlignment="Center"
                Content="Płytki krwi PLT [liczba/μl]"
                FontSize="25"
                Foreground="White" />

            <Label
                Grid.Row="19"
                Grid.Column="0"
                Margin="20,10,0,10"
                VerticalAlignment="Center"
                Content="Średnia objętość krwi MPV [fl]"
                FontSize="25"
                Foreground="White" />

            <TextBox
                Name="bdData"
                Grid.Row="1"
                Grid.Column="1"
                Margin="5,10,5,10"
                Background="LightSkyBlue"
                FontSize="25"
                Foreground="Black" />

            <TextBox
                Name="bdKlinika"
                Grid.Row="2"
                Grid.Column="1"
                Margin="5,10,5,10"
                Background="LightSkyBlue"
                FontSize="25"
                Foreground="Black" />

            <TextBox
                Name="bdRBC"
                Grid.Row="4"
                Grid.Column="1"
                Margin="5,10,5,10"
                Background="LightSkyBlue"
                FontSize="25"
                Foreground="Black" />

            <TextBox
                Name="bdHb"
                Grid.Row="5"
                Grid.Column="1"
                Margin="5,10,5,10"
                Background="LightSkyBlue"
                FontSize="25"
                Foreground="Black" />

            <TextBox
                Name="bdHtc"
                Grid.Row="6"
                Grid.Column="1"
                Margin="5,10,5,10"
                Background="LightSkyBlue"
                FontSize="25"
                Foreground="Black" />

            <TextBox
                Name="bdMCV"
                Grid.Row="7"
                Grid.Column="1"
                Margin="5,10,5,10"
                Background="LightSkyBlue"
                FontSize="25"
                Foreground="Black" />

            <TextBox
                Name="bdMCH"
                Grid.Row="8"
                Grid.Column="1"
                Margin="5,10,5,10"
                Background="LightSkyBlue"
                FontSize="25"
                Foreground="Black" />

            <TextBox
                Name="bdMCHC"
                Grid.Row="9"
                Grid.Column="1"
                Margin="5,10,5,10"
                Background="LightSkyBlue"
                FontSize="25"
                Foreground="Black" />

            <TextBox
                Name="bdRDWCV"
                Grid.Row="10"
                Grid.Column="1"
                Margin="5,10,5,10"
                Background="LightSkyBlue"
                FontSize="25"
                Foreground="Black" />

            <TextBox
                Name="bdRC"
                Grid.Row="11"
                Grid.Column="1"
                Margin="5,10,5,10"
                Background="LightSkyBlue"
                FontSize="25"
                Foreground="Black" />

            <TextBox
                Name="bdWBC"
                Grid.Row="12"
                Grid.Column="1"
                Margin="5,10,5,10"
                Background="LightSkyBlue"
                FontSize="25"
                Foreground="Black" />

            <TextBox
                Name="bdNeutrofile"
                Grid.Row="13"
                Grid.Column="1"
                Margin="5,10,5,10"
                Background="LightSkyBlue"
                FontSize="25"
                Foreground="Black" />

            <TextBox
                Name="bdBazofile"
                Grid.Row="14"
                Grid.Column="1"
                Margin="5,10,5,10"
                Background="LightSkyBlue"
                FontSize="25"
                Foreground="Black" />

            <TextBox
                Name="bdEozynofile"
                Grid.Row="15"
                Grid.Column="1"
                Margin="5,10,5,10"
                Background="LightSkyBlue"
                FontSize="25"
                Foreground="Black" />

            <TextBox
                Name="bdLimfocyty"
                Grid.Row="16"
                Grid.Column="1"
                Margin="5,10,5,10"
                Background="LightSkyBlue"
                FontSize="25"
                Foreground="Black" />

            <TextBox
                Name="bdMonocyty"
                Grid.Row="17"
                Grid.Column="1"
                Margin="5,10,5,10"
                Background="LightSkyBlue"
                FontSize="25"
                Foreground="Black" />

            <TextBox
                Name="bdPLT"
                Grid.Row="18"
                Grid.Column="1"
                Margin="5,10,5,10"
                Background="LightSkyBlue"
                FontSize="25"
                Foreground="Black" />

            <TextBox
                Name="bdMPV"
                Grid.Row="19"
                Grid.Column="1"
                Margin="5,10,5,10"
                Background="LightSkyBlue"
                FontSize="25"
                Foreground="Black" />

            <Button
                Name="wroc"
                Grid.Row="20"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="5,10,5,10"
                Background="LightSkyBlue"
                Click="WrocMenu"
                FontSize="30">
                Wróć
            </Button>

            <Button
                Name="zapisz"
                Grid.Row="21"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="5,10,5,10"
                Background="LightSkyBlue"
                Click="Zapisz"
                FontSize="30">
                Zapisz
            </Button>


        </Grid>
    </ScrollViewer>

</Window>
